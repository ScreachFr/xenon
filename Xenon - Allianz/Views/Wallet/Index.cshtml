@model IEnumerable<Xenon___Allianz.Models.WalletModel>

@{
    ViewBag.Title = "Index";
<h1>(int)(@Session["XenonUserId"]);</h1>
}

<h2>List of Wallet</h2>

<p>
    @Html.ActionLink("Create New wallet", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Service)
        </th>
        @{
            if (((string)Session["XenonType"]) == "souscripteur")
            {
                <th></th>
            }
        }

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Service)</td>
            @{
                if (((string)Session["XenonType"]) == "souscripteur")
                {
                    <td>
                        @Html.ActionLink("Edit to do", "Edit", "Wallet",
                                                     new { @id = item.Service }, new { @class = "btn btn-success" })
                    </td>
                }
            }
            <td>
                @Html.ActionLink("Detail", "Index", "Contract",
                                                    new { id = item.Id }, new { @class = "btn btn-primary" })
            </td>

        </tr>
    }

</table>
