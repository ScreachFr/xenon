@model Xenon___Allianz.Models.ContractModel

@{
    ViewBag.Title = "Detail";
}

<h2>Detail</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Start)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Start.Split(' ')[0])
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.End)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.End.Split(' ')[0])
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cover)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cover)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Negociable)
        </dt>


        @if (Model.Negociable)
        {
            <dd>yes</dd>
        }
        else
        {
            <dd>no</dd>
        }


        <dt>
            @Html.DisplayNameFor(model => model.Prime)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Prime)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Rompu)
        </dt>

        @if (Model.Rompu)
        {
            <dd>yes</dd>
        }
        else
        {
            <dd>no</dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Company)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Company)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.WalletName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.WalletName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Value)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>



    </dl>
    @foreach (var item in Model.GeographicZones)
    {
        <p>@item</p>
    }
</div>
<p>
    @if (((string)Session["XenonStatus"] == "souscripteur") && Model.Initial)
    {
        <a href="/Contract/Edit/@Model.Id">edit contract</a>
    }

</p>
