@model Xenon___Allianz.Models.UserModel

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">My Account </h2>

<div>
    
    <hr />

    <div class="row">
        <div class="col-sm-6 col-md-3"></div>
        <div class="col-sm-6 col-md-6">
            <div class="thumbnail">
                <center>
                    <div class="caption">
                        <h3>@Html.DisplayFor(model => model.Username)</h3>
                        <p>@Html.DisplayFor(model => model.Status)</p>
                        <p>
                            <div class="row">
                                <div class="col-md-4">@Html.ActionLink("Edit password", "Detail", "Contract", new { @class = "btn btn-success" })</div>
                                <div class="col-md-4">@Html.ActionLink("Update status", "UpdateStatus", "User", new { @class = "btn btn-info" })</div>
                                <div class="col-md-4">@Html.ActionLink("Download File", "DownloadFile", "User", new { @class = "btn btn-warning" })</div>
                                
                            </div>
                                </p>
                    </div>
                    <p><span class="glyphicon glyphicon-envelope"></span> @Html.DisplayFor(model => model.Mail)</p>
                    <p><span class="glyphicon glyphicon glyphicon-globe"></span> @Html.DisplayFor(model => model.GeographicZoneName)</p>
                </center>
                

            </div>
        </div>
        <div class="col-sm-6 col-md-3"></div>
    </div>

   
</div>

