@model Xenon___Allianz.Models.RegisterUserModel

@{
    ViewBag.Title = "RegisterUser";
}

<h2>RegisterUser</h2>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form action="/Admin/RegisterUserAux">
            <div class="form-group">
                <input type="text" class="form-control" name="Username" placeholder="username">
            </div>
            <div class="form-group">
                <input id="www" type="text" list="statusdata" name="Status" class="form-control" placeholder="status">
                <datalist id="statusdata">
                    <label for="adresse">ou sélectionner dans la liste</label>
                    <select class="form-control" id="sel1" name="Status">
                        @foreach (var item in Model.StatusList)
                        {
                            <option value=@item>@item</option>
                        }
                    </select>
                </datalist>
            </div>
            <div class="form-group">
                <input id="www" type="text" list="urldata" name="GeographicZone" class="form-control" placeholder="Geographic Zone">
                <datalist id="urldata">
                    <label for="adresse">ou sélectionner dans la liste</label>
                    <select class="form-control" id="sel1" name="GeographicZone" down>
                        @foreach (var item in Model.GeographicZoneList)
                        {
                            <option value=@item.Id>@item.Name</option>
                        }
                    </select>
                </datalist>

            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
